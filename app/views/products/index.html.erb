


<div class="row">
  <div class="col-sm-6">
    <h1>Products</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_product_path, class: 'btn btn-primary' do %>
    Add New Product
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
            <th>Product Photo</th>
            <th>Product Name</th>
            <th>Price (RM)</th>
            <th>SKU</th>
            <th>Description</th>
            <th>Action</th>
        
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <%= content_tag :tr, id: dom_id(product), class: dom_class(product) do %>
                      <% if product.product_photo.attached? %>
                          <td><%= image_tag product.product_photo, width: 100 %></td>
                      <% else %>
                          <td>Photo Unavailable</td>
                      <% end %>
                          <td><%= product.product_name %></td>
                          <td><%= product.price %></td>
                          <td><%= product.sku %></td>
                          <td><%= product.description %></td>
          
          
            <td><%= link_to 'Show', product %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
